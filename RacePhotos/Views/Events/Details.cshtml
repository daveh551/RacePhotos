@model PhotoServer.Domain.Event

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Event</legend>

    <div class="display-label">EventName</div>
    <div class="display-field">@Model.EventName</div>

    <div class="display-label">RaceDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.RaceDate)</div>

    <div class="display-label">Location</div>
    <div class="display-field">@Model.Location</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


