@model IEnumerable<PhotoServer.Domain.Event>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            EventName
        </th>
        <th>
            RaceDate
        </th>
        <th>
            Location
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.EventName
        </td>
        <td>
			@String.Format("{0:g}", item.RaceDate)
        </td>
        <td>
			@item.Location
        </td>
    </tr>
}

</table>


