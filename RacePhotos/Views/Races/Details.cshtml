@model PhotoServer.Domain.Race

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Race</legend>

    <div class="display-label">Event</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Event).ToString()</div>

    <div class="display-label">Distance</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Distance).ToString()</div>

    <div class="display-label">ReferenceTime</div>
    <div class="display-field">@String.Format("{0:g}", Model.ReferenceTime)</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


